
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite parallel="tests" name="MySuite">
    <listeners>
        <listener class-name="Reusable.Listeners"/>
    </listeners>

    <test name="LoginTests" thread-count="2">
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>

    <test thread-count="2" name="Error Handling">
        <classes>
            <class name="tests.LoginHandlingTest"/>
        </classes>
    </test>

</suite>